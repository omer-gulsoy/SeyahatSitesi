@using EntityLayer.Concrete
@model List<Comment>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Yorum Listesi</h1>
<table class="table table-bordered" style="text-align:center">
	<tr>
		<th>Yorum ID</th>
		<th>Yorum Rotası</th>
		<th>Yorum İçeriği</th>
		<th>Yorumcu ID</th>
		<th>Yorumu Sil</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.CommentID</td>
			<td>@item.Destination.City</td>
			<td>@item.CommentContent</td>
			<td>@item.AppUserID</td>
			<td><a href="/Admin/Comment/DeleteComment/@item.CommentID" class="btn btn-outline-danger">Sil</a></td>
		</tr>
	}
</table>

