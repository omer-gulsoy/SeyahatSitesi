@model List<ContactUs>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<style>
    .ks{
        text-align:center;
    }
</style>
<h1>Bize Ulaşın Mesajları</h1>

<table class="table ks table-bordered">
    <tr>
        <th>#</th>
        <th>Mesaj Gönderen Kişi</th>
        <th>Mesaj Konusu</th>
        <th>Mesaj Tarihi</th>
        <th>Mesajı Sil</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>@item.Subject</td>
            <td>@item.MessageDate.ToString("dd.MMM.yyyy")</td>
            <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="#" class="btn btn-outline-dark">Mesajı Aç</a></td>
        </tr>
    }
</table>